<% if @create_book.errors.any? %>
  <div class="text-danger", id="error_explanation">
    <h2><%= pluralize(@create_book.errors.count, "error") %> prohibited this book from being saved:</h2>
    <ul>
      <% @create_book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<%end%>
<div class="container">
  <div class="row">
    <%= render 'layouts/user_info', userinfo: @c_user, create_book: @create_book %>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table">
        <tr><th></th><th>title</th><th>opinion</th></tr>
        <% @books.each do |book| %>
          <tr>
            <td>
              <%= link_to user_path(book.user.id) do %>
                <%= attachment_image_tag @user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg", size:"40x40" %>
              <% end %>
            </td>
            <td>
              <%= link_to book_path(book.id) do %>
                <%= book.title %>
              <% end %>
            </td>
            <td><%= book.body %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>