<div class="container">
  <div class="row">
    <%= render 'layouts/user_info', userinfo: @current_user, create_book: @create_book %>
    <div class="col-8 offset-1">
      <h2>Books</h2>
      <table class="table">
        <tr><th></th><th>title</th><th>opinion</th></tr>
        <% @books.each do |book| %>
          <tr>
            <td>
              <%= link_to user_path(book.user.id) do %>
                <%= attachment_image_tag @user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg", size:"40x40" %>
              <% end %>
            </td>
            <td>
              <%= link_to book_path(book.id) do %>
                <%= book.title %>
              <% end %>
            </td>
            <td><%= book.body %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>