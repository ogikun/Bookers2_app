<div class="container">
  <div class="row">
    <div class="col-5 mx-auto">
      <h2>Editing Book</h2>
      <%= form_with model:@book, local: true do |f| %>
        <div class="form-group">
          <label>Name</label><br>
          <%= f.text_field :title, autofocus: true %>
        </div>
        <div class="form-group">
          <label>Opinion</label><br>
          <%= f.text_area :body, autofocus: true %>
        </div>
        <%= f.submit "Update Book", class: "btn btn-secondary" %>
      <% end %>
      <%= link_to "Show", book_path(@book.id) %> | <%= link_to "Back", books_path %>
    </div>
  </div>
</div>

