<div class="container">
  <div class="row">
    <%= render 'layouts/user_info', userinfo: @current_user, create_book: @create_book %>
    <div class="col-8 offset-1">
      <h2>Users</h2>
      <table class="table">
        <tr><th>image</th><th>name</th><th></th></tr>
        <% @users.each do |user| %>
          <tr>
            <td>
              <%= attachment_image_tag @user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg", size:"40x40" %></td>
            <td><%= user.name %></td>
            <td><%= link_to "Show", user_path(user) %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>