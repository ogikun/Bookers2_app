<div class="container">
  <div class="row">
    <div class="col-5 mx-auto">
      <h2>User info</h2>
        <% if @user.errors.any? %>
          <div class="text-danger", id="error_explanation">
            <h2><%= pluralize(@user.errors.count, "error") %> prohibited this book from being saved:</h2>
            <ul>
              <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <%end%>
      <%= form_with model:@user, local: true do |f| %>
        <div class="form-group">
          <label for="name">Name</label><br>
          <%= f.text_field :name, autofocus: true, id:"name" %>
        </div>
        <div class="form-group">
          <label for="image">Image</label><br>
          <%= f.attachment_field :profile_image, id:"image" %>
        </div>
        <div class="form-group">
          <label for="introduction">Introduction</label><br>
          <%= f.text_area :introduction, autofocus: true, id:"introduction" %>
        </div>
        <%= f.submit "Update User", class: "btn btn-secondary" %>
      <% end %>
    </div>
  </div>
</div>
